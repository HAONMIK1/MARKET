회원가입
-- 회원 테이블 생성

drop sequence userseq ;
create sequence userseq nocache ;

drop table users purge ;
create table users(
	no number primary key,
	name varchar2(30) not null,
	id varchar2(12) not null,
	password varchar2(12),
	hp varchar2(20)				
);

insert into users(no, name, id, password,hp)  values(userseq.nextval, '어드민', 'admin', '1234', '010-1111-1111') ;

commit;
--admin
drop sequence tradeseq ;
drop table prodtrade purge ;

create sequence tradeseq nocache ;
create table prodtrade(
 	pnum		number primary key, 
	pid			varchar2(100) not null, 
	pimg 		varchar2(100) not null, 
	pname 		varchar2(50) not null ,
	pcate 		varchar2(50) not null ,
	plocation 	varchar2(50) not null ,
	pprice	 	number not null ,
	pinfor	 	varchar2(1000) not null
);
commit;
insert into prodtrade values(tradeseq.nextval,'noa2006', 'Mac.jpg', '맥북프로 16인치', '디지털', '고양시 덕양구 행신동',2600000,'팜') ;

--사용자
drop sequence tradeseq_?;
drop table prodtrade_? purge ;

create sequence tradeseq_? nocache ;
create table prodtrade_?(
	tnum 	number primary key, 
	timg 	varchar2(100) not null, 
	tname 	varchar2(50) not null ,
	tcate 	varchar2(50) not null ,
	tlocation 	varchar2(50) not null ,
	tprice	 number not null ,
	tinfor	 varchar2(1000) not null
);
commit;

insert into prodtrade values(tradeseq.nextval, 'Mac.jpg', '맥북프로 16인치', '디지털', '고양시 덕양구 행신동',2600000,'팜') ;

col tnum for a12
col timg for a12
col tname for a12
col tcate for a12
col tlocation for a12
col tprice for a80
col tinfor for a12



drop sequence catprod ;
drop table product purge ;


drop sequence catprod ;
create sequence catprod nocache;
create table product(
	pnum 		number not null primary key, 
	pname 		varchar2(50) not null, 
	pcategory_fk  	varchar2(20) not null, 
	pcompany 	varchar2(50), 
	pimage   		varchar2(30), 
	pqty		    number default 0,
	price   		number default 0, 
	pspec   		varchar2(12), 
	pcontents 	varchar2(300), 
	point   		number default 0, 
	pinputdate 	varchar2(10)
);

select * from product  ;

commit;


col name for  a12
col id for a12
col password for a12
col ssn1 for a10
col ssn2 for a10
select no, name, id, password, ssn1, ssn2 from members ;

-- 게시판 테이블 만들기
drop table boards purge ;      
create table boards(
	num number primary key,
	writer varchar2(12),
	email varchar2(30),
	subject varchar2(50),
	password varchar2(10),
	readcount number default 0,
	ref number default 0,
	step number default 0,
	depth number default 0,
	regdate timestamp default sysdate,
	content varchar2(4000),
	ip varchar2(20)
);
drop sequence boardseq ;
create sequence boardseq nocache;  

-- 매출 주문 테이블
drop sequence orderseq ;
create sequence orderseq ;  

drop table orders purge ;
create table orders(
	orderId number,
	memno number,
	pnum number,
	qty number,
	amount number
);

drop table board purge ;
create table board(
	num number not null primary key,
	writer varchar2(10) not null,
	email varchar2(10),
	subject varchar2(20) not null,
	passwd varchar2(12) not null,
	reg_date date not null,
	readcount int default 0,
	ref number  default 0 not null,
	re_step number default 0 not null,
	re_level number default 0 not null,
	content varchar2(50) not null,
	ip varchar2(15)  not null
);

drop sequence board_seq ;
create sequence board_seq
increment by 1
start with 1
minvalue 1
maxvalue 10000
nocache;

